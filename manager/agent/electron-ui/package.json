{
  "name": "cxl-qvp",
  "version": "1.0.0",
  "description": "QVP Development Cloud Manager for CXL",
  "homepage": "http://localhost",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.electron.ui",
    "icon": "assets/icon.png",
    "files": [
      "**/*"
    ],
    "extraFiles": [
      ".env"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["deb"],
      "category": "Development",
      "maintainer": "QVP Team",
      "desktop": {
        "Name": "CXL QVP",
        "Comment": "QVP Development Cloud Manager for CXL",
        "Categories": "Development"
      }
    },
    "deb": {
      "afterInstall": "debian/postinst",
      "afterRemove": "debian/postrm"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "axios": "^1.7.9",
    "crypto": "^1.0.1",
    "electron-packager": "^17.1.2",
    "plotly.js-dist": "^2.35.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8"
  }
}
